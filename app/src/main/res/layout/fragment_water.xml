<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nav_water"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/on_background"
        android:layout_marginBottom="16dp" />

    <Card
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_water_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/2000 ml"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <ProgressBar
                android:id="@+id/pb_water_goal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:spacing="8dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_log_250"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="250ml"
                    android:textSize="12sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/on_primary" />

                <Button
                    android:id="@+id/btn_log_500"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="500ml"
                    android:textSize="12sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/on_primary" />

                <Button
                    android:id="@+id/btn_log_750"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="750ml"
                    android:textSize="12sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/on_primary" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_daily_streak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Streak: 0 days"
                android:textSize="14sp"
                android:textColor="@color/on_background"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_longest_streak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longest: 0 days"
                android:textSize="14sp"
                android:textColor="@color/neutral" />

        </LinearLayout>

    </Card>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:spacing="8dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/et_water_amount"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Custom amount (ml)"
            android:textColor="@color/on_background"
            android:inputType="number"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp" />

        <FloatingActionButton
            android:id="@+id/fab_add_water"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/primary"
            app:tint="@color/on_primary" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_water_logs"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
