<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, User! ðŸ‘‹"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:layout_marginBottom="24dp" />

        <!-- Daily Summary Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="12dp"
            android:layout_marginBottom="24dp">

            <Card
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tv_tasks_completed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Tasks"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:gravity="center" />
                </LinearLayout>
            </Card>

            <Card
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tv_meals_logged"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Meals"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary"
                        android:gravity="center" />
                </LinearLayout>
            </Card>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="12dp"
            android:layout_marginBottom="24dp">

            <Card
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tv_water_intake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 ml Water"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/info"
                        android:gravity="center" />
                </LinearLayout>
            </Card>

            <Card
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/tv_habits_completed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Habits"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        android:gravity="center" />
                </LinearLayout>
            </Card>

        </LinearLayout>

        <!-- Calories -->
        <Card
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_background"
                    android:layout_marginBottom="12dp" />
                <TextView
                    android:id="@+id/tv_calories_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 kcal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning" />
            </LinearLayout>
        </Card>

        <!-- Streaks -->
        <Card
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_streak"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_background"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:spacing="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="space_between">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tasks:"
                            android:textSize="14sp"
                            android:textColor="@color/neutral" />
                        <TextView
                            android:id="@+id/tv_task_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 days"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="space_between">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water:"
                            android:textSize="14sp"
                            android:textColor="@color/neutral" />
                        <TextView
                            android:id="@+id/tv_water_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 days"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/info" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="space_between">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meals:"
                            android:textSize="14sp"
                            android:textColor="@color/neutral" />
                        <TextView
                            android:id="@+id/tv_meal_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 days"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="space_between">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Habits:"
                            android:textSize="14sp"
                            android:textColor="@color/neutral" />
                        <TextView
                            android:id="@+id/tv_habit_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 days"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/success" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </Card>

    </LinearLayout>

</ScrollView>
